<p id="notice"><%= notice %></p>

<h1>Activity Instances</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_instances.each do |activity_instance| %>
      <tr>
        <td><%= activity_instance.activity_id %></td>
        <td><%= activity_instance.date %></td>
        <td><%= activity_instance.amount %></td>
        <td><%= activity_instance.description %></td>
        <td><%= link_to 'Show', activity_instance %></td>
        <td><%= link_to 'Edit', edit_activity_instance_path(activity_instance) %></td>
        <td><%= link_to 'Destroy', activity_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

