<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(activity_type, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <% if activity_type.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(activity_type.errors.count, "error") %> prohibited this activity_type from being saved:</h2>

          <ul>
          <% activity_type.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Activity name", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= f.label :"goal per day" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :goalperday, class: "form-control", placeholder: "20", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= f.label :measure %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :measure, class: "form-control", placeholder: "hours / days / km", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Something you want to write", autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
